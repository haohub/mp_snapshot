 @import '../../components/comment/comment.wxss'; 

/* 评论面板 */
.work-comment-panel {
    font-size: 24rpx;
    background: #fff;
}
.promt-msg{
  display: block;
  text-align: center;
  font-size:28rpx;
  height: 260rpx;
  line-height: 260rpx;
  color: #666;
}

.comment-panel-hd {
   position: relative;
    padding-left: 16rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #e3e3e3;
}
.tab-panel{
  display: inline-block;
}
.tab-nav{
  display: inline-block;
  margin: 0 10rpx;
  color: #999;
  line-height:100rpx;
  font-size: 24rpx;
}
.active{
    color:#353535;  
}
.reward-panel{
 display: inline-block;
 width:500rpx;
 height:100rpx;
 text-align: right;
 position: absolute;
 right:16rpx;
}
.reward-users-head{
 display: inline-block;
  margin:20rpx 4rpx 20rpx 0rpx;
  float:right;
}
.user-head-pic{
  display: inline-block;
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #ccc;
}
.user-head-pic image{
  width:100%;
  height:100%;
}
.reward-num{
  display:inline-block;
  margin:40rpx 0rpx 40rpx 10rpx;
  float: right;
}

