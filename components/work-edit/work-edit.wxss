@font-face {
	font-family: "iconFont";
	src: url('https://images.mepai.me/xcx/fonts/iconFont.eot');
	src: url('https://images.mepai.me/xcx/fonts/iconFont.eot?#iefix') format('eot'),
		url('https://images.mepai.me/xcx/fonts/iconFont.woff2') format('woff2'),
		url('https://images.mepai.me/xcx/fonts/iconFont.woff') format('woff'),
		url('https://images.mepai.me/xcxfonts/iconFont.ttf') format('truetype'),
		url('https://images.mepai.me/xcx/fonts/iconFont.svg#iconFont') format('svg');
}
.icon:before {
	font-family: "iconFont";
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	font-style: normal;
	font-variant: normal;
	font-weight: normal;
	/* speak: none; only necessary if not using the private unicode range (firstGlyph option) */
	text-decoration: none;
	text-transform: none;
}
.icon-location:before {
    content: "\E007";
}
page {
    height: 100%;
}
.work-edit {
    background: #ececec;
    height: 100%;
}

/* 图片 */
.photos-wrap {
    box-sizing: border-box;
    padding: 15rpx 15rpx 15rpx 20rpx;
    width: 100%;
    white-space: nowrap;
    margin-bottom: 28rpx;
    background: #fff;
}
.photos-wrap image {
    width: 90rpx;
    height: 90rpx;
    margin-left: 15rpx;
}
/* 编辑框 */
.edit-content {
    position: relative;
    width: 100%;
    height: 300rpx;
    background: #fff;
    margin-bottom: 28rpx;
    font-size: 30rpx;
    padding: 30rpx 30rpx 30rpx 20rpx;   
    box-sizing: border-box;
}
textarea {
    width: 100%;
    min-height: 85%;
    height: auto;
}
.edit-content .tips {
    /*position: absolute;
    left: 30rpx;
    bottom: 20rpx;*/
    color: #999;
    text-align: left;
}
/* 位置 */
.location-wrap {
    position: relative;
    height: 90rpx;
    background: #fff;
    border-bottom: 1px solid #ececec;
    font-size: 30rpx;
}
.location {
    box-sizing: border-box;
    padding-left: 74rpx;
    width: 100%;
    height: 100%;
    line-height: 90rpx;
}
.icon-location {
    position: absolute;
    top: 34rpx;
    left: 35rpx;
    font-size: 25rpx;
    color: #666;
}

/* 标签 */
.tags-wrap {
    position: relative;
    height: 90rpx;
    background: #fff;
    font-size: 30rpx;
    color: #666;
}
.work-edit .add-tags {
    box-sizing: border-box;
    padding-left: 74rpx;
    width: 100%;
    height: 100%;
    line-height: 90rpx;
    text-indent: 2rpx;
    white-space: nowrap;
}
.work-edit .add-tags text {
    margin-right: 16rpx;
}
.icon-tag {
    position: absolute;
    top: 30rpx;
    left: 35rpx;
    font-size: 30rpx;
}
/* 发布按钮 */
.btn-pub {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100rpx;
    background: #7aa5b1;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    font-size: 26rpx;
}