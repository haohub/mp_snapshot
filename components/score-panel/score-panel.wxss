.score-panel-mask {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
}
.score-panel {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 600rpx;
    border-radius: 8rpx;
}
.score-panel-inner {
    margin-bottom: 30rpx;
    background: #fff;
    border-radius: 8rpx;
}
.score-panel-bd {
    position: relative;
    height: 660rpx;
}
.score-panel-bd-bg {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 533rpx;
}
.score-panel-bd .score {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    font-size: 200rpx;
    font-family: 'PingFangSC-Light';
}
.score-panel-ft {
    overflow: hidden;
    height: 140rpx;
    background: #f5f5f5;
    padding: 0 20rpx;
    border-bottom-left-radius:8rpx;
    border-bottom-right-radius:8rpx;
}
.threshold-score {
    margin: 30rpx 0;
    display: flex;
    justify-content: space-between;
    color: #353535;
    font-size: 24rpx;
}
.rangeslider {
    position: relative;
    height: 4rpx;
    border-radius: 2rpx;
    background: #ebebeb;
}
.rangeslider .slider-bar {
    width: 0;
    background: #00bef5;
    height: 100%;
}
.rangeslider .slider-btn {
    position: absolute;
    left: 0;
    top: -600%;
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
    background: #fff;
    box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
}
.btn-confirm {
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 8rpx;
    background: #fff;
    text-align: center;
    color: #00bdf4;
    font-size: 30rpx;
    letter-spacing: 50rpx;
    text-indent: 50rpx;
}