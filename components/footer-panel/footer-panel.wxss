
/* 底部打分评论面板 */
.footer {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    border-top: 1px solid #dadada;
    height: 80rpx;
    background: #fff;
}
.footer .btn-grade, 
.footer-comment,
.icon-up {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}
.footer .btn-grade {
    left: 140rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 60rpx;
}
.footer .icon-up{
  display: inline-block;
  width:60rpx;
  height:60rpx;
  margin:0rpx 40rpx;
  overflow: hidden;
}
.footer .icon-up image{
  width:100%;
  height:100%;
}
.footer-comment {
    right: 40rpx;
}
.comment-icon {
    width: 54rpx;
    height: 54rpx;
    vertical-align: middle;
}
/* 加载跟多 */
.finish {
    background: #f5f5f5;
}