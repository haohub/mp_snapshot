page {
    height: 100%;
    background: #eceff1;
}
.review {
    height: 500rpx;
    padding: 50rpx 20rpx;
    box-sizing: border-box;
}
.review textarea {
    display: block;
    width: 100%;
    height: 100%;
    padding: 20rpx;
    box-sizing: border-box; 
    border-radius: 8rpx;
    background: #fff;
    font-size: 30rpx;
    box-sizing: border-box;
    white-space: wrap;
}
.btn-pub {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100rpx;
    background: #7aa5b1;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    font-size: 26rpx;
}